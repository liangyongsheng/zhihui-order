<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:order.cfg.properties</value>
			</list>
		</property>
	</bean>
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="validationQuery" value="select 1" />
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="${order.mysql.connection.cfg.dataSource.url}"></property>
		<property name="username" value="${order.mysql.connection.cfg.dataSource.username}"></property>
		<property name="password" value="${order.mysql.connection.cfg.dataSource.password}"></property>
	</bean>
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref local="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.connection.autoReconnect">true</prop>
				<prop key="hibernate.connection.is-connection-validation-required">true</prop>
				<prop key="c3p0.max_size">25</prop>
				<prop key="c3p0.min_size">8</prop>
				<prop key="c3p0.timeout">5000</prop>
				<prop key="c3p0.max_statements">100</prop>
				<prop key="c3p0.idle_test_period">3000</prop>
				<prop key="c3p0.acquire_increment">1</prop>
				<prop key="c3p0.validate">false</prop>
			</props>
		</property>
		<property name="configLocation" value="classpath:order.mysql.hibernate.cfg.xml">
		</property>
	</bean>
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<constructor-arg name="sessionFactory">
			<ref local="sessionFactory" />
		</constructor-arg>
	</bean>
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>
</beans>